Package: qmCH2018
Type: Package
Title: Quantile Mapping for CH2018
Version: 1.0
Date: 2019-07-09
Authors@R: c(
    person("Sven", "Kotlarski", email = "sven.kotlarski@meteoswiss.ch", role = c("aut", "cre")),
    person("Jan", "Rajczak", email = "jan.rajczak@meteoswiss.ch", role = "aut"),
